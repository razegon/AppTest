<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cornflower_blue</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">#097AD4</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_sea_green</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="cardTitleTranslation" parent="TextAppearance.MaterialComponents.Subtitle1" />

    <style name="foundationText" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="PlacesDetailText" parent="TextAppearance.MaterialComponents.Headline6" />

    <style name="PlacesBody" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="cardTitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/dark_blue</item>
    </style>

    <style name="Theme.AppTest.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
    </style>


</resources>